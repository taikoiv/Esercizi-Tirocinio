<Window x:Class="Client1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client1"
        mc:Ignorable="d"
        Title="UpperCase" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="181*"/>
            <ColumnDefinition Width="336*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Text to uppercase" VerticalAlignment="Top" Width="120" Margin="30,10,0,0"/>
        <Button x:Name="button" Content="UpperCase!" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="30,123,0,0" Click="button_Click"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="155" VerticalAlignment="Top" Width="316" Grid.Column="1" Margin="10,10,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
